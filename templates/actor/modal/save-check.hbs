<form>
    <div class="form-group">
        <label>{{ localize "GODBOUND.RollTypePrompt" }}</label>
        <select name="rollType">
            {{selectOptions options selected=defaultRollType
            localize=true}}
        </select>
    </div>
    <div class="form-group">
        <label>{{ localize "GODBOUND.RollSituationalBonus" }}</label>
        <input type="text" name="otherModifiers"
            placeholder="{{ localize 'GODBOUND.RollExample' }}" />
    </div>
    <div class="form-group">
        <label>{{ localize "GODBOUND.RollMode" }}</label>
        <select name="rollMode">
            {{selectOptions rollModes selected=defaultRollMode localize=true}}
        </select>
    </div>
</form>
