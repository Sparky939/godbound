<i class="fas {{editToggleIcon}} npc-toggle-icon clickable"
    data-click-type="toggle-mode"
    title="View Mode"></i>
{{#if editMode}}
<div class="edit-sheet">
    {{> "systems/godbound/templates/actor/npc-parts/npc-form.hbs"}}
</div>
{{/if}}
{{#if viewMode}}
<div class="view-sheet">
    {{> "systems/godbound/templates/actor/npc-parts/npc-view.hbs"}}
</div>
{{/if}}
<div class="weapon-list">
    <ol class="items-list">
        <li class='item flexrow items-header'>
            <div class='item-name'>{{localize 'Name'}}</div>
            <div class='item-formula'>{{localize 'Roll Formula'}}</div>
            <div class='item-controls'>
                <a
                    class='item-control item-create clickable'
                    data-click-type="item-create"
                    title='{{localize "DOCUMENT.Create" type='Weapon'}}'
                    data-type='weapon'>
                    <i class='fas fa-plus'></i>
                    {{localize 'DOCUMENT.New' type='weapon'}}
                </a>
            </div>
        </li>
        {{#each weapons as |weapon id|}}
        <li class="item flexrow" data-item-id="{{weapon._id}}">
            <div class='item-name'>
                <div class='item-image'>
                    <a class='clickable' data-click-type="roll"
                        data-roll-type='weapon'>
                        <img
                            src='{{weapon.img}}'
                            title='{{weapon.name}}'
                            width='24'
                            height='24' />
                    </a>
                </div>
                <h4>{{weapon.name}}</h4>
            </div>
            <div class='item-formula item-prop'>
                <div>
                    {{weapon.system.roll.attack}}
                </div>
                <div>
                    {{weapon.system.roll.damage}} {{#if
                    weapon.system.roll.straightDamage}}Straight
                    {{/if}}{{weapon.system.roll.damageType}} Damage</div>
            </div>
            <div class='item-controls'>
                <a
                    class='item-control clickable item-edit'
                    data-click-type="item-edit"
                    title='{{localize "DOCUMENT.Update" type='Weapon'}}'>
                    <i class='fas fa-edit'></i>
                </a>
                <a
                    class='item-control item-delete clickable'
                    data-click-type="item-delete"
                    title='{{localize "DOCUMENT.Delete" type='Weapon'}}'>
                    <i class='fas fa-trash'></i>
                </a>
            </div>
        </li>
        {{/each}}
    </ol>
</div>