<form>
    <div class="form-group">
        <label>{{ localize "GODBOUND.DifficultyPrompt" }}</label>
        <select name="difficulty">
            {{selectOptions difficulties selected=defaultDifficulty localize=true}}
        </select>
    </div>
    <div class="form-group">
        <label>{{ localize "GODBOUND.RelevantFactPrompt" }}</label>
        <input type="checkbox" name="relevantFact" {{checked relavantFact}}/>
    </div>
    <div class="form-group">
        <label>{{ localize "GODBOUND.RollSituationalBonus" }}</label>
        <input type="text" name="bonus" value="" placeholder="{{ localize 'GODBOUND.RollExample' }}"/>
    </div>
    <div class="form-group">
        <label>{{ localize "GODBOUND.RollMode" }}</label>
        <select name="rollMode">
            {{selectOptions rollModes selected=defaultRollMode localize=true}}
        </select>
    </div>
</form>
