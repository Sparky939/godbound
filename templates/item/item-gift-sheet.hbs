{{! This template is a fallback for when items don't have more specific
templates. }}
{{! Generally, you'll want to make more specific templates when possible. }}
<form class='{{cssClass}}' autocomplete='off'>
    <header class='sheet-header'>
        <img
            class='profile-img'
            src='{{item.img}}'
            data-edit='img'
            title='{{item.name}}' />
        <div class='header-fields'>
            <h1 class='charname'><input
                    name='name'
                    type='text'
                    value='{{item.name}}'
                    placeholder='Name' /></h1>
            <div class='grid grid-3col'>
                <span>
                    {{localize system.word.name}}
                </span>
                <span>
                    {{localize system.power.label}}
                </span>
                <span>
                    {{localize system.type.label}}
                </span>
            </div>
        </div>
    </header>

    {{! Sheet Tab Navigation }}
    <nav class='sheet-tabs tabs' data-group='primary'>
        <a class='item' data-tab='description'>Description</a>
        <a class='item' data-tab='details'>Details</a>
    </nav>

    {{! Sheet Body }}
    <section class='sheet-body'>

        {{! Description Tab }}
        <div class='tab' data-group='primary' data-tab='description'>
            {{! Editors must receive enriched text data from getData to properly
            handle rolls }}
            {{editor
            enrichedDescription
            target='system.description'
            engine='prosemirror'
            button=true
            editable=editable
            }}
        </div>

        {{! Attributes Tab }}
        <div class='tab attributes' data-group='primary' data-tab='details'>
            <div class='grid grid-2col'>
                <label>{{localize 'Word'}}:</label>
                <select name='system.word'>
                    <option value></option>
                    {{selectOptions
                    words
                    selected=system.word.id
                    localize=true
                    }}
                </select>
                <label>{{localize 'Power'}}:</label>
                <select name='system.power.value'>
                    <option value></option>
                    {{selectOptions
                    config.gifts.power
                    selected=system.power.value
                    localize=true
                    }}
                </select>
                <label>{{localize 'Type'}}:</label>
                <select name='system.type.value'>
                    <option value></option>
                    {{selectOptions
                    config.gifts.type
                    selected=system.type.value
                    localize=true
                    }}
                </select>
            </div>
            {{! As you add new fields, add them in here! }}
        </div>
    </section>
</form>