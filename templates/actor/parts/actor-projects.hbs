<div class='compact-section'>
  <div class="resources-grid">
    <div class="header">
      <div>{{localize 'Resource'}}</div>
      <div>{{localize 'Available'}}</div>
      <div>{{localize 'Total'}}</div>
      <div>{{localize 'Income'}}</div>
    </div>
    <div class="influence-row">
      <label class="project-header-label">{{localize
        'Influence'}}:</label>
      <div class="influence-value">{{system.resources.influence.value}}</div>
      <div class="influence-total">{{system.resources.influence.max}}</div>
    </div>
    <div class="dominion-row">
      <label class="project-header-label">{{localize
        'Dominion'}}:</label>
      <div class="dominion-available">{{dominionAvailable}}</div>
      <div class="dominion-total">
        <input type="text" name="system.resources.dominion.gained"
          value="{{system.resources.dominion.gained}}" data-dtype="Number" />
      </div>
      <div class="dominion-income">
        <input type="text" name="system.resources.dominion.income"
          value="{{system.resources.dominion.income}}" data-dtype="Number" />
        Per Month
      </div>
    </div>
    <div class="spent-row">
      <div class="spent-value">{{localize "Dominion Spent"}}:
        {{system.resources.dominion.spent}}</div>
    </div>
  </div>
  <ol class='items-list'>
    <li class='item flexrow items-header'>
      <div class='item-name'>{{localize 'Name'}}</div>
      <div class='item-cost'>{{localize 'Cost'}}</div>
      <div class='item-controls'>
        <a
          class='item-control item-create clickable'
          data-click-type="item-create"
          title='Create item'
          data-type='project'>
          <i class='fas fa-plus'></i>
          {{localize 'DOCUMENT.New' type='project'}}
        </a>
      </div>
    </li>
    {{#each projects as |item id|}}
    <li class='item flexrow' data-item-id='{{item._id}}'>
      <div class='item-name'>
        <div class='item-image'>
          <a class='clickable' data-click-type="roll" data-roll-type='item'>
            <img
              src='{{item.img}}'
              title='{{item.name}}'
              width='24'
              height='24' />
          </a>
        </div>
        <h4>{{item.name}}</h4>
      </div>
      <div>
        {{#if item.system.cost.dominion}}
        <h4>{{localize "Dominion:"}}{{item.system.cost.dominion}}</h4>
        {{/if}}
        {{#if item.system.cost.influence}}
        <h4>{{localize "Influence:"}}{{item.system.cost.influence}}</h4>
        {{/if}}
      </div>
      <div class='item-controls'>
        <a
          class='item-control clickable item-edit' data-click-type="item-edit"
          title='{{localize "DOCUMENT.Edit" type='project'}}'>
          <i class='fas fa-edit'></i>
        </a>
        <a
          class='item-control item-delete clickable'
          data-click-type="item-delete"
          title='{{localize "DOCUMENT.Delete" type='project'}}'>
          <i class='fas fa-trash'></i>
        </a>
      </div>
    </li>
    {{/each}}
  </ol>
