<div class='compact-section'>
  <div class='influence-value'>
    <label class="project-header-label">{{localize
      'Influence'}}:</label>{{system.resources.influence.value}}
  </div>
  <div class="dominion-row">
    <div class='dominion-available'>
      <label class="project-header-label">{{localize
        'Dominion'}}:</label>{{dominionAvailable}}
    </div>
    <div class="dominion-gained">
      <label for="dominion-gained" class="project-header-label">
        Gained:
      </label>
      <input type="text" name="system.resources.dominion.gained"
        value="{{system.resources.dominion.gained}}" data-dtype="Number" />
    </div>
    <div class='dominion-income'>
      <input type='text' name='system.resources.dominion.income'
        value='{{system.resources.dominion.income}}' data-dtype="Number" />
      <label for='dominion-income' class="project-header-label">{{localize
        'Per Month'}}</label>
    </div>
  </div>
</div>
<ol class='items-list'>
  <li class='item flexrow items-header'>
    <div class='item-name'>{{localize 'Name'}}</div>
    <div class='item-cost'>{{localize 'Cost'}}</div>
    <div class='item-controls'>
      <a
        class='item-control item-create'
        title='Create item'
        data-type='project'>
        <i class='fas fa-plus'></i>
        {{localize 'DOCUMENT.New' type='project'}}
      </a>
    </div>
  </li>
  {{#each projects as |item id|}}
  <li class='item flexrow' data-item-id='{{item._id}}'>
    <div class='item-name'>
      <div class='item-image'>
        <a class='rollable' data-roll-type='item'>
          <img
            src='{{item.img}}'
            title='{{item.name}}'
            width='24'
            height='24' />
        </a>
      </div>
      <h4>{{item.name}}</h4>
      <h4>{{item.system.cost.influence}}</h4>
    </div>
    <div>
      {{#if item.system.cost.dominion}}
      <h4>{{localize "Dominion:"}}{{item.system.cost.dominion}}</h4>
      {{/if}}
      {{#if item.system.cost.influence}}
      <h4>{{localize "Influence:"}}{{item.system.cost.influence}}</h4>
      {{/if}}
    </div>
    <div class='item-controls'>
      <a
        class='item-control item-edit'
        title='{{localize "DOCUMENT.Edit" type='project'}}'>
        <i class='fas fa-edit'></i>
      </a>
      <a
        class='item-control item-delete'
        title='{{localize "DOCUMENT.Delete" type='project'}}'>
        <i class='fas fa-trash'></i>
      </a>
    </div>
  </li>
  {{/each}}
</ol>
